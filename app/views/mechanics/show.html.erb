<h1><%= @mechanic.name %></h1>
<p>Years of Experience: <%= @mechanic.years_experience %></p>

<section id="current_rides">
  <h2>Current rides they're working on:</h2>
  <% @mechanic.rides.each do |ride| %>
    <p><%= ride.name %></p>
  <% end %>
</section>

<section id="new_ride">
  <h2>Add a ride to workload:</h2>
  <%= form_with url: "/mechanics/#{@mechanic.id}/rides/new", method: :post, local: true do |f| %>
    <%= f.label :ride_id, 'Ride ID:' %>
    <%= f.number_field :ride_id %>
    <%= f.submit 'Submit' %>
  <% end %>
</section>